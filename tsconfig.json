{
    "compilerOptions": {
        "module": "es2022",
        "target": "es2022",
        "lib": [ "es2022", "dom" ],
        "outDir": "dist/esm",
        "sourceMap": true,
        "declaration": true,
        "emitDeclarationOnly": false,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "baseUrl": ".",
        "paths": {
          "trident-webgpu": ["./src/index"]
