{
    "compilerOptions": {
        "outDir": "dist",
        "module": "esnext",
        "target": "esnext",
        "moduleResolution": "node",
        "declaration": false,
        "emitDeclarationOnly": false,
        "composite": false,
        "incremental": true,
        "baseUrl": ".",
        "strictPropertyInitialization": false,

        "paths": {
            "@trident/core": [
                "packages/core/index.ts"
            ],
            "@trident/core/*": [
                "packages/core/*"
            ],
            "@trident/plugins": [
                "packages/plugins/index.ts"
            ],
            "@trident/plugins/*": [
                "packages/plugins/*"
            ]
        }
    }
}