{
  "compilerOptions": {
    "outDir": "dist",
    "declaration": true,            // produce .d.ts when you *do* build
    "declarationMap": true,
    "strict": true,
    "module": "es2022",
    "target": "es2022",
    "moduleResolution": "node",
    "strictPropertyInitialization": false,
    "paths": {
      "@trident/core": ["../core/src"],
      "@trident/core/*": ["../core/src/*"],
      "@trident/plugins": ["../plugins/src"],
      "@trident/plugins/*": ["../plugins/src/*"]
    }
  },
  "include": ["src"]
}